{
  "name": "steamwebapi-node",
  "version": "0.1.0",
  "description": "A Node.js wrapper for Steam Web API",
  "private": "false",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "tsc",
    "ci": "pnpm run lint && pnpm run build",
    "release": "pnpm run lint && pnpm run build && changeset publish"
  },
  "keywords": [
    "steamwebapi",
    "typescript",
    "steam",
    "api",
    "wrapper"
  ],
  "author": "Nadir Hajiyev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NadirHaciyev/steamwebapi-node"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.7"
  }
}
